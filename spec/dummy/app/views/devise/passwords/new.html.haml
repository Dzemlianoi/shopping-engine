%main.container.general-main-wrap
  .text-center
    %h1.mb-30= t('users.privacy.forgot_password')
    %p.general-password-text= t('users.privacy.reset_email_instructions')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'general-form' }) do |f|
    .form-group.mb-25
      = f.email_field :email, autofocus: true, placeholder: t('users.privacy.enter_email'), class: 'form-control'
    = f.submit t('users.privacy.email_instructions'), class: 'btn btn-default center-block mb-20'
    .text-center
      = link_to t('general.cancel'), request.referer.present? ? request.referer : root_path, class: 'in-gold-500 mb-20'
