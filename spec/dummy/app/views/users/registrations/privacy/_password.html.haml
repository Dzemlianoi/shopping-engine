.col-sm-5.col-sm-offset-1
  %p.in-gold-500.font-18.mb-25= t('general.password')
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'general-form-md divider-lg-bottom pb-25', method: :patch }) do |f|
    .form-group.mb-30
      = f.label :current_password, html: {class: 'control-label input-label', 'data-bar' => t('users.privacy.old_password')}
      = f.password_field :current_password, class: 'form-control', placeholder: t('users.privacy.old_password')
    .form-group.mb-30
      = f.label :password, html: {class: 'control-label input-label', 'data-bar' => t('users.privacy.new_password')}
      = f.password_field :password, class: 'form-control', placeholder: t('users.privacy.new_password')
    .form-group.mb-40
      = f.label :password_confirmation, html: {class: 'control-label input-label', 'data-bar' => t('users.privacy.confirm_password')}
      = f.password_field :password_confirmation, class: 'form-control', placeholder: t('users.privacy.confirm_password')
    .general-text-align
      = f.submit t('users.addresses.save'), class: 'btn btn-default mb-10'
